<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#FFF</item>
        <item name="colorAccent">@color/xanhxam</item>
        <item name="colorPrimaryDark">@color/xanhduongdam</item>
        <item name="android:actionBarSize">@dimen/actionBarSize</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/xanhxam</item>
        <item name="android:typeface">sans</item>
        <item name="elevation">0dp</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_w</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_w</item>
        <item name="android:background">#b3000000</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/actionBarTetSize</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="create_question_label">
        <item name="android:color">@color/xanhxam</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="tabBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
    </style>

    <style name="tab_in_my_page">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/bg_xam</item>
        <item name="android:gravity">bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tab_in_my_page_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/xanhden</item>
    </style>

    <style name="tabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
